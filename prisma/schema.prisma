}

enum UserRole {
  CUSTOMER
  SUPERVISOR
  MANAGER
  STAFF
  GUEST
}

enum BookingStatus {
  AVAILABLE
  RESERVED
  PAID
}

enum Weekday {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}
